<section class="userRegistration">
	<form
		class="register1 col s12"
		action="/admin/upload"
		enctype="multipart/form-data"
		method="POST"
	>
		<h3>Add Product</h3>
		<div class="row">
			<div class="input-field col s4">
				<input
					id="productName"
					type="text"
					name="productName"
					class="validate"
				/>
				<label for="productName">Product Name</label>
			</div>
			<div class="input-field col s4">
				<input id="price" type="text" name="price" class="validate" />
				<label for="price">Price</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s4">
				<textarea
					id="description"
					class="materialize-textarea"
					name="description"
				></textarea>
				<label for="description">Desciption</label>
			</div>
			<div class="file-field input-field col s4">
				<div class="btn">
					<span>Upload Image</span>
					<input type="file" name="image" />
				</div>
			</div>
		</div>
		<div class="row">
			<h4>Select Category</h4>

			<p>
				<label>
					<input name="category" type="radio" value="vietnamese" />
					<span>Vietnamese</span>
				</label>
			</p>
			<p>
				<label>
					<input name="category" type="radio" />
					<span>Chinese</span>
				</label>
			</p>
			<p>
				<label>
					<input name="category" type="radio" />
					<span>Thai</span>
				</label>
			</p>
			<p>
				<label>
					<input name="other" type="radio" />
					<span>Other</span>
				</label>
			</p>
		</div>
		<div class="row">
			<div class="col s12">
				<button
					class="btn-large waves-effect waves-light"
					type="submit"
					name="action"
				>Register
					<i class="material-icons right">send</i>
				</button>
			</div>
		</div>
	</form>
</section>