<section class="userLogin">
	<div class="row">
		<form class="login col s12" action="/guest/login" method="POST">
			<div class="row">
				<h5>Please Login to Asian Sauces</h5>
				<div class="input-field">
					<a href="/auth/google" class="btn red darken-1">
						<i class="fab fa-google left"></i>
						Log In With Google
					</a>
				</div>
				<div class="input-field col s6">
					<i class="material-icons prefix">account_circle</i>
					<input
						id="username"
						type="text"
						name="username"
						class="validate"
					/>
					<label for="username">Username</label>
				</div>
				<div class="input-field col s6">
					<i class="material-icons prefix">password</i>
					<input
						id="icon_telephone"
						type="password"
						name="password"
						class="validate"
					/>
					<label for="icon_telephone">Password</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s6">
					<button
						class="btn waves-effect waves-light"
						type="submit"
						name="action"
					>Login
						<i class="material-icons right">send</i>
					</button>
				</div>
			</div>
		</form>
	</div>
</section>